<!DOCTYPE html>
<html>
<head>
  <title>Airbnb</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-inverse">
	  <div class="navbar-inner">
	    <div class="container">
			 <a class="brand" href="<%= root_path %>">Groundbnb</a>
			    <ul class="nav">
			      <li class="active"><a href="<%= root_path %>">Home</a></li>
			      <li><a href="<%= about_path %>">About</a></li>
			      <li><a href="<%= contact_path %>">Contact</a></li>
			      <li><a href="<%= rooms_path %>">Rooms</a></li>
			    </ul>
			 <div style="float:right;">
		              <% if user_signed_in? %>
		                <%= current_user.email %>
		                <%= link_to "Log Out", destroy_user_session_path, :method => :delete %>
		              <% else %>
		                <a class="btn btn-info" href="<%= new_user_session_path %>">Log In</a> |
		                <a class="btn btn-info" href="<%= new_user_registration_path %>">Sign Up</a>
		              <% end %>
	    	 </div>
	    </div>
	  </div>
	</div>

<%= yield %>

</body>
</html>
